# vim: ft=sh

APP=ruby

[ "$HOME" ] && [ "$ETC" ] && [ "$LIB" ] && [ "$VAR" ] || { 
    echo "
Error: configuration variables are not set: 
\$HOME: $HOME
\$ETC:  $ETC
\$LIB:  $LIB
\$VAR:  $VAR
" >&2
return 1
}

PROFILED="$VAR/profile.d"
[ -e "$PROFILED" ] || {
    echo "$PROFILED does not exist" >&2; exit 1; }

mkdir -p $LIB/$APP

cat <<'END' >$PROFILED/$APP-dirs
GEM_HOME="$LIB/ruby"
export GEM_HOME

prepend_path "$GEM_HOME/bin"
END
